<%- include('../layouts/adminHeader'); %>

<div class="site-wrap">

    <nav class="site-nav">
  
      <div class="name">
        luxe-LOOT
  
        
      </div>
  
      <ul>
        <li><a href="/admin">Dashboard</a></li>
        <li><a href="/admin/product">Products</a></li>
        <li><a href="/admin/categories">Categories</a></li>
        <li><a href="/admin/brands">Brand</a></li>
        <li><a href="/admin/admins">Admins</a></li>
        <li class="active"><a href="/admin/customer">Customers</a></li>
        <li><a href="/admin/Banner">Banners</a></li>
        <li><a href="/admin/payments">Payments</a></li>
        <li><a href="/admin/orders">Orders</a></li>
      </ul>
  
      <div class="note">
        <button class="btn"><a href="/admin/logout"></a></button>
      </div>
  
    </nav>
  
    <main>
        <div class="container p-5">
            <div class="row my-4 ">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table table-stripped text-center">
                            <thead>
                                <tr class="table-dark">
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let i=1 %>
                               <% for(data of data){ %>
                                <tr>
                                    <td><%= i++ %></td>
                                    <td><%= data.Name %></td>
                                    <td><%= data.Email %></td>
                                    <td><%= data.Status %></td>
                                    <td>
                                       <% if(data.Status=='Active'){ %> <a href="/admin/blockUser/<%- data._id -%>" class="text-success"><button type="button" class="btn btn-danger">Block</button></a> <% } %>
                                        <% if(data.Status!='Active'){ %>  <a href="/admin/UnBlockUser/<%- data._id -%>" class="text-danger"> <button type="button" class="btn btn-success">UnBlock</button> </a> <% } %>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </main>
  
  </div>


<!-- DataTable Initialization Script -->
<script>
  $(document).ready(function () {
    $('.table').DataTable();
  });
</script>

<% -include('../layouts/adminFooter') %>