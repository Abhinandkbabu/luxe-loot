<script>
  function addToCart(productId) {
    $.ajax({
        url: `/addtocart/${productId}`,
        method: 'GET',
        success: function(res) {
          console.log("this is that",res.response);
            if (res.user && res.response) {
                Toastify({
                    text: res.msg,
                    duration: 800,
                    close: false,
                    gravity: "top",
                    position: 'center',
                    style: {
                        background: "rgba(0, 0, 255, 0.7)", // Set the background color with opacity
                        color: "#fff",
                        borderRadius: "15px",
                    }
                }).showToast();
            } else if(res.user && !res.response){
                Toastify({
                    text: res.msg,
                    duration: 800,
                    close: false,
                    gravity: "top",
                    position: 'center',
                    style: {
                        background: "rgba(0, 0, 255, 0.7)", // Set the background color with opacity
                        color: "#fff",
                        borderRadius: "15px",
                    }
                }).showToast();
            }else{
              Toastify({
                    text: 'Plese login',
                    duration: 800,
                    close: false,
                    gravity: "top",
                    position: 'center',
                    style: {
                        background: "rgba(0, 0, 255, 0.7)", // Set the background color with opacity
                        color: "#fff",
                        borderRadius: "15px",
                    }
                }).showToast();
            }
            // Show toast notification

            // Optional: You can redirect the user to the cart page after adding the item
            // window.location.href = "/cart";
        },
        error: function(error) {
            // Show toast notification for error, if needed
            toastr.error('Failed to add item to cart');
        }
    });
}

